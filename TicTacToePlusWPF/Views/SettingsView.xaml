<UserControl x:Class="TicTacToePlusWPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToePlusWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <StackPanel Margin="20">
        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Grid Rows:" Width="100"/>
            <TextBox Text="{Binding GridRows}" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Grid Columns:" Width="100"/>
            <TextBox Text="{Binding GridColumns}" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Win Condition:" Width="100"/>
            <TextBox Text="{Binding WinCondition}" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Player Count:" Width="100"/>
            <TextBox Text="{Binding PlayerCount}" Width="50"/>
        </StackPanel>

        <TextBlock Text="Player Symbols:" Margin="0,20,0,5"/>
        <ItemsControl ItemsSource="{Binding PlayerSymbols}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding .}" Width="30" Margin="5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Content="Save" Command="{Binding SaveSettingsCommand}" Margin="0,20,0,0"/>
    </StackPanel>
</UserControl>
