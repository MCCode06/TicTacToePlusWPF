<UserControl x:Class="TicTacToePlusWPF.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}"
             MinHeight="400"
             MinWidth="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top bar -->
            <RowDefinition Height="Auto"/>
            <!-- Message -->
            <RowDefinition Height="*"/>
            <!-- Game grid -->
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding PlayerTurnDisplay}" 
                   FontSize="22" 
                   FontWeight="SemiBold"
                   VerticalAlignment="Center" 
                   Grid.Column="0" />
            

            <Button Content="🔄 Restart" 
                Command="{Binding RestartCommand}" 
                Margin="5,0,0,0"
                Padding="12,6"
                FontWeight="Bold"
                Grid.Column="1" />

            <Button Content="🏠 Back to Menu" 
                Command="{Binding BackToMenuCommand}" 
                Margin="10,0,0,0"
                Padding="12,6"
                FontWeight="Bold"
                Grid.Column="2" />
        </Grid>

        <!-- Game message -->
        <StackPanel Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,0,0,15">
            <TextBlock Text="{Binding GameMessage}" 
               FontSize="20"
               FontWeight="Bold"
               Foreground="Green"
               TextAlignment="Center"
               Visibility="{Binding GameMessage, Converter={StaticResource StringToVisibilityConverter}}" />

            <TextBlock Text="{Binding CountdownMessage}"
               FontSize="18"
               FontStyle="Italic"
               Foreground="Orange"
               Margin="0,6,0,0"
               TextAlignment="Center"
               Visibility="{Binding CountdownMessage, Converter={StaticResource StringToVisibilityConverter}}" />
        </StackPanel>
        
        
        <!-- Game board -->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding GridRows}" 
                             Columns="{Binding GridColumns}"
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="8" 
                        Background="#ffffff" 
                        Margin="4"
                        SnapsToDevicePixels="True"
                        BorderBrush="#cccccc"
                        BorderThickness="1">
                        <Button Command="{Binding ClickCommand}" 
                            CommandParameter="{Binding}"
                            Content="{Binding Symbol}" 
                            FontSize="28"
                            FontWeight="Bold"
                            BorderThickness="0">
                            <Button.Effect>
                                <DropShadowEffect Color="Black" 
                                              Direction="320" 
                                              ShadowDepth="4" 
                                              BlurRadius="8"/>
                            </Button.Effect>
                        </Button>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</UserControl>
